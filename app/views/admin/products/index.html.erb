<div class="container" style="margin-top: 60px;">
  <div class="row" >
    <div class="col-md-8">


      <!-- 购物列表 -->
      <div class="shoping-cart">

        <!-- 列表头部 -->
        <div class="cart-column-head">



          <label class="col-xs-2 ">商品</label>
          <label class="col-xs-2 ">名称</label>
          <label class="col-xs-2 ">单价</label>
          <label class="col-xs-2 ">数量</label>
          <label class="col-xs-2 ">操作</label>
          <label class="col-xs-2 ">编辑</label>

        </div>

        <!-- 列表购物车商品 -->




        <% @products.each do |product| %>
          <!-- 商品图片 -->
          <div class=" row text-center ">
            <div class="col-xs-2 product-image-cart">
              <%= link_to product_path(product) do%>
                <% if product.image.present? %>
                  <%= image_tag(product.image.thumb.url, class: "img-responsive center-block") %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "img-responsive center-block") %>
                <% end %>
              <% end %>
            </div>

            <!-- 商品名称 -->
            <div class="col-xs-2 product-title-cart">
              <%= link_to(product.title, product_path(product)) %>
            </div>

            <!-- 商品单价 -->
            <div class="col-xs-2 product-title-cart">
              <%= product.price %> RMB
            </div>

            <!-- 商品数量 -->
            <div class="col-xs-2 tc">
              <%= product.quantity %>
            </div>

            <!-- 删除商品 -->
            <div class="col-xs-2 tc">
              <!-- 设立使用“link_to...do”的写法，可以将元素变为链接 -->
              <%= link_to admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } do%>
                <i class="fa fa-trash"></i>
            </div>

            <div class="col-xs-2 tc">
              <!-- 设立使用“link_to...do”的写法，可以将元素变为链接 -->
              <%= link_to("edit", edit_admin_product_path(product)) %>
            </div>


          </div>
          <hr>

        <% end %>
      <% end %>

      </div>


    </div>
  </div>
</div>
